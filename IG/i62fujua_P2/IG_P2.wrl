                }
            }

            geometry IndexedFaceSet {
            coord Coordinate {
                    point [ 
                        0 0.5 0
                        0.5 0 0
                        1 0 1
                        0 0 0.5
                    ]
                } 

                #sides
                coordIndex[
                    0, 2, 1, -1,
                    0, 3, 2, -1,
                    2, 3, 1, -1
                ]
            }
        }

        #Punta 4
        Shape {
            appearance Appearance{
                material Material{
                    diffuseColor 1 0 0
                }
            }

            geometry IndexedFaceSet {
            coord Coordinate {
                    point [ 
                        0 0.5 0
                        0 0 0.5
                        -1 0 1
                        -0.5 0 0
                    ]
                } 

                #sides
                coordIndex[
                    0, 2, 1, -1,
                    0, 3, 2, -1,
                    2, 3, 1, -1
                ]
            }
        }
    ]
}

#Voltear y rotar para formar la cara de atr√°s
Transform {
    rotation 0 0 1 3.14
    children[
        Transform{
            rotation 0 1 0 .78
            children[
                USE CARA8
            ]
        }
    ]
}

