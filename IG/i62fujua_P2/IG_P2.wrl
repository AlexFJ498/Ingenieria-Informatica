#ESTRELLA 8 PUNTAS#

DEF CARA8 Group{
    children[

        #Punta 1
        Shape {
            appearance Appearance{
                material Material{
                    diffuseColor 0 0 1
                }
            }

            geometry IndexedFaceSet {
            coord Coordinate {
                    point [ 
                        0 0.5 0
                        0 0 -0.5
                        -1 0 -1
                        -0.5 0 0
                    ]
                } 

                #sides
                coordIndex[
                    0, 1, 2, -1,
                    0, 2, 3, -1,
                    3, 2, 1, -1
                ]
            }
        }

        #Punta 2
        Shape {
            appearance Appearance{
                material Material{
                    diffuseColor 0 1 0 
                }
            }

            geometry IndexedFaceSet {
